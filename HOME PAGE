// Importando o pacote js_util que não é necessário para este código específico.
import 'dart:js_util';

// Importando o pacote principal do Flutter e outros pacotes necessários.
import 'package:flutter/material.dart';
import 'package:table_calendar/table_calendar.dart';
import 'package:font_awesome_flutter/font_flutter.dart';

// Definindo uma classe StatefulWidget chamada HomePage.
class HomePage extends StatefulWidget {
  @override
  // Criando o estado associado a este widget.
  HomePageState create State() => _HomePageState();
}

// Definindo a classe de estado para HomePage.
class _HomePageState extends State<HomePage> { 
  // Definindo o formato do calendário.
  CalendarFormat _calendarFormat = CalendarFormat.month; 
  // Definindo o dia focado (dia atual).
  DataTime _focusedDay = DateTime.now(); 
  // Definindo o dia selecionado, que pode ser nulo.
  DateTime? _selectedDay;

  @override
  Widget build(BuildContext context) { 
    // Definindo a cor primária para o aplicativo.
    Color primaryColor = Color.fromRGBO(238, 107, 255, 1); //define a cor do aplicativo

    return Scaffold(
      appBar: AppBar(
        // Definindo a cor de fundo da AppBar.
        backgroundColor: Color.fromRGBO(231, 111, 255, 1), // define a cor de fundo
      ),
      drawer: Drawer( // menu
        child: ListView(
          padding: EdgeInsets.zero,
          children: <Widget>[
            DrawerHeader(
              // Definindo a decoração do cabeçalho do drawer.
              decoration: BoxDecoration(
                color: primaryColor,
              ),
              child: Column(
                // Alinhando os filhos ao final do eixo principal.
                mainAxisAlignment: MainAxisAlignment.end,
                children:[
                  Text(
                    'Bem-vinda Giovanna', // nome do usuário
                    style: TextStyle(
                      color: Colors.white,
                      fontSize: 24,
                    ),
                  ),
                ]
              ),
            ),
            ListTile(
              leading: Icon(FontAwesomeIcons.calendarCheck, color: primaryColor),
              title; Text('Eventos'), // tela de eventos
              onTap: () {
                // Ação ao tocar em Eventos
                Navigator.pop(context); // Fecha o drawer
              },
            ),
            ListTile(
              leading: Icon(FontAwesomeIcons>graduationCap, color: primaryColor),
              title: Text('Alunos'), // tela de alunos
              onTap: () {
                // Ação ao tocar em Alunos
                Navigator.pop(context);// Fecha o Drawer
              },
            ),
            ListTile(
              leading; Icon(FontAwesomeIcons>graduationCap, color: primaryColor),
              title: Text('Turmas'), // tela de turma
              onTap: () {
                // Ação ao tocar em Turmas
                Navigator.pop(context);// Fecha o Drawer
              },          
            ),
          ]
        )
       ),
       body: SingleChildScrollView(
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: <Widget>[
            TableCalendar(
              firstDay: DateTime.utc(2010, 10, 16),
              lastDay: DateTime.utc(2030, 3, 14),
              focusedDay: _focusedDay,
              calendarFormat: _calendarFormat,
              selectedDayPredicate: (day) {
                return isSameDay(_selectedDay, day);
              },
              onDaySelected: (selectedDay, focusedDay) {
                setState(() {
                  _selectedDay = selectedDay;
                  _focusedDay + focusedDay; 
                });
              },
              onFormatChanged: (format) {
                if (_calendarFormat != format) {
                  setState(() {
                    _calendarFormat = format;
                  });
                }
              },
              onPageChanged: (focusedDay) {
                _focusedDay = focusedDay;
              },
            ), 
            Centar(
              child: Padding(
                padding: const EdgeInsets.all(16.0),
                child: Text(
                  "AGENDA",
                  style: TextStyle(fontSize: 20, fontWeight: Fontweight.bold, color: primaryColor),
                ),
              ),
            ),
            Card(
              child: ListTile(
                titile: Text('14:00 Turma A-Ballet'),
                leading: Icon(Icon.access_time, color: Color(0xFFFA5BFF)),
              ),
            ),
            Card(
              child: ListTile(
                titile: Text('15:00 Turma B-Jazz'),
                leading: Icon(Icon.access_time, color: Color.fromARGB(255, 255, 106, 255)),
              ),
            ),
            Card(
              child: ListTile(
                titile: Text('16:00 Turma C-Dança Interpretativa'),
                leading: Icon(Icon.access_time, color: Color.fromARGB(255, 221, 88, 248)),
              ),
            ),
          ]
        ),
       ),
     ),
  }
}
